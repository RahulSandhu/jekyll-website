# Source of gems
source "https://rubygems.org"

# Jekyll core
gem "jekyll", "~> 4.4.1"

# Beautiful Jekyll theme as specified in _config.yml
gem "beautiful-jekyll-theme", "6.0.1"

# Plugins required by _config.yml and general site functionality
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.12"      # For RSS feed
  gem "jekyll-paginate"             # For pagination (you specified paginate: 5)
  gem "jekyll-sitemap"              # For sitemap generation
end
